{
  "name": "pipit",
  "version": "2.0.0",
  "description": "The universal logger with the pluggable architecture.",
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./processor/batchMessages": "./processor/batchMessages.js",
    "./processor/levelCutoff": "./processor/levelCutoff.js",
    "./processor/prependArgs": "./processor/prependArgs.js",
    "./processor/prependLevel": "./processor/prependLevel.js",
    "./processor/prependTimestamp": "./processor/prependTimestamp.js",
    "./processor/sendToSentry": "./processor/sendToSentry.js",
    "./processor/stringifyAsJSON": "./processor/stringifyAsJSON.js",
    "./processor/structurizeArgs": "./processor/structurizeArgs.js",
    "./processor/transformArgs": "./processor/transformArgs.js",
    "./processor/writeToConsole": "./processor/writeToConsole.js",
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc --project tsconfig.build.json && cp package.json README.md LICENSE.txt lib/ && cd lib && npm pkg delete scripts devDependencies",
    "clean": "rimraf lib docs coverage",
    "test": "vitest run",
    "typecheck": "tsc",
    "docs": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smikhalevski/pipit.git"
  },
  "keywords": [
    "logger"
  ],
  "author": "Savva Mikhalevski <smikhalevski@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smikhalevski/pipit/issues"
  },
  "homepage": "https://github.com/smikhalevski/pipit#readme",
  "devDependencies": {
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.16",
    "typedoc-plugin-mdn-links": "^5.1.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "parallel-universe": "^6.1.2"
  }
}
