{
  "compilerOptions": {
    "noEmit": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["DOM", "ES2023"],
    "outDir": "./lib"
  },
  "include": ["./src/**/*"]
}
